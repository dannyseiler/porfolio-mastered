---
import GitHub from "./icons/GitHub.astro";
import HTML from "./icons/HTML.astro";
import CSS from "./icons/CSS.astro";
import JAVASCRIPT from "./icons/Javascript.astro";
import ANGULAR from "./icons/Angular.astro";
import ASTRO from "./icons/AstroIcon.astro";
import TAILWIND from "./icons/Tailwind.astro";
import LinkButton from "./LinkButton.astro";
import Link from "./icons/Link.astro";

const TAGS = {
  HTML: {
    name: "HTML",
    class: "bg-[#e34f26] text-white",
    icon: HTML,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#0c73b8] text-white",
    icon: CSS,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-[#f0db4f] text-black",
    icon: JAVASCRIPT,
  },
  ANGULAR: {
    name: "Angular",
    class: "bg-[#F20755] text-white",
    icon: ANGULAR,
  },
  ASTRO: {
    name: "Astro",
    class: "bg-[#B22222] text-white",
    icon: ASTRO,
  },
  TAILWIND: {
    name: "Tailwind",
    class: "bg-[#AFEEEE] text-dark",
    icon: TAILWIND,
  },
};
const PROJECTS = [
  {
    title: "AM Agrimensura",
    description:
      "Rediseño del sitio original en Wix utilizando las herramientas web HTML, CSS y JavaScript para su desarrollo.",
    link: "https://www.amagrimensura.com/",
    github: "https://github.com/Giannito975/AM-Agrimensura",
    image: "/projects/amagrimensura.jpg",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT],
  },
  {
    title: "Acepto Mascotas",
    description:
      "Proyecto Personal donde el objetivo es centralizar las búsquedas de alquileres que sean Pet Friendly. También cuenta con un espacio donde pueden colaborar con una fundación.",
    link: "https://aceptomascotas.vercel.app/",
    github: "https://github.com/dannyseiler/aceptomascotas",
    image: "/projects/aceptomascotas.png",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT],
  },
  {
    title: "Porfolio ",
    description:
      "Recientemente he actualizado mi porfolio agregando nuevas tecnologías web que estoy aprendiendo.",
    link: "#",
    github: "#",
    image: "/projects/porfolio.png",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT, TAGS.ASTRO, TAGS.TAILWIND],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="texto"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-4" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
